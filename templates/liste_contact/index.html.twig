{% extends 'back.html.twig' %}

{% block title %}Hello ListeContactController!{% endblock %}

{% block body %}
<br>
<br>

 <table>
                   <thead>
                       <tr>
                           <th>Nom</th>
                           <th>Email</th>
                           <th>Message</th>
                           <th>Action</th>
                       </tr>
                   </thead>
                   <tbody>
                       {% for contact in contacts %}
                       <tr>
                           <td>{{ contact.nom }}</td>
                           <td>{{ contact.email }}</td>
                           <td>{{ contact.message }}</td>
                            <td>
                                   <a href="{{ path('contact_edit', {id: contact.id}) }}" class="btn btn-primary">Modifier</a>
                                   <a href="{{ path('contact_edit', {id: contact.id}) }}" class="btn btn-primary">Ajouter</a>
                                   <a href="{{ path('contact_delete', {id: contact.id}) }}" class="btn btn-danger" onclick="return confirm('Voulez-vous vraiment supprimer ce contact ?')">Supprimer</a>
                              </td>

                       </tr>
                       {% endfor %}
                   </tbody>
               </table>

{% endblock %}
